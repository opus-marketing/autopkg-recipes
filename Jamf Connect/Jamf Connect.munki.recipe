<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Comment</key>
	<string>Created with Recipe Robot v2.2.0 (https://github.com/homebysix/recipe-robot)</string>
	<key>Description</key>
	<string>Downloads the latest version of Jamf Connect and imports it into Munki.</string>
	<key>Identifier</key>
	<string>com.github.opusmarketing.munki.JamfConnect</string>
	<key>Input</key>
	<dict>
		<key>MUNKI_REPO_SUBDIR</key>
		<string>apps/%NAME%</string>
		<key>NAME</key>
		<string>Jamf Connect</string>
		<key>pkginfo</key>
		<dict>
			<key>catalogs</key>
			<array>
				<string>default</string>
			</array>
			<key>description</key>
			<string> </string>
			<key>developer</key>
			<string>JAMF Software</string>
			<key>display_name</key>
			<string>Jamf Connect</string>
			<key>name</key>
			<string>%NAME%</string>
			<key>unattended_install</key>
			<true/>
			<key>preinstall_script</key>
			<string>#!/bin/bash
## get currently logged in user
username=$(/usr/bin/stat -f "%Su" /dev/console)
sudo -u $username /bin/launchctl unload /Library/LaunchAgents/com.jamf.connect.plist
killall "Jamf Connect"
sleep 3</string>
<key>postinstall_script</key>
			<string>#!/bin/bash
## get currently logged in user
username=$(/usr/bin/stat -f "%Su" /dev/console)
sudo -u $username /bin/launchctl load /Library/LaunchAgents/com.jamf.connect.plist
sudo -u $username /bin/launchctl start /Library/LaunchAgents/com.jamf.connect.plist</string>
		</dict>
	</dict>
	<key>MinimumVersion</key>
	<string>1.0.0</string>
	<key>ParentRecipe</key>
	<string>com.github.opusmarketing.download.JamfConnect</string>
	<key>Process</key>
	<array>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>pkg_path</key>
				<string>%pathname%</string>
				<key>repo_subdirectory</key>
				<string>%MUNKI_REPO_SUBDIR%</string>
			</dict>
			<key>Processor</key>
			<string>MunkiImporter</string>
		</dict>
	</array>
</dict>
</plist>
