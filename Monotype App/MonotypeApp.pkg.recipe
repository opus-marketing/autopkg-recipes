               <string>purge_ds_store</string>
            </dict>
         </dict>
      </dict> -->

      <dict>
			<key>Processor</key>
			<string>PathDeleter</string>
			<key>Arguments</key>
			<dict>
				<key>path_list</key>
				<array>
					<!-- <string>%RECIPE_CACHE_DIR%/repackage</string> -->
             	<string>%RECIPE_CACHE_DIR%/unpacked</string>
				</array>
			</dict>
		</dict>

	</array>
</dict>
</plist>