<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Downloads the latest version of MAMP.</string>
	<key>Identifier</key>
	<string>com.github.opusmarketing.download.MAMP</string>
	<key>Input</key>
	<dict>
		<key>DOWNLOAD_URL</key>
		<string>https://downloads.mamp.info/MAMP-PRO/releases</string>
		<key>NAME</key>
		<string>MAMP</string>
		<key>SEARCH_URL</key>
		<string>https://www.mamp.info/en/downloads</string>
	</dict>
	<key>MinimumVersion</key>
	<string>0.6.1</string>
	<key>Process</key>
	<array>
		<dict>
			<key>Processor</key>
			<string>URLTextSearcher</string>
			<key>Arguments</key>
			<dict>
				<key>url</key>
				<string>%SEARCH_URL%</string>
				<key>re_pattern</key>
				<string>(?P&lt;filename&gt;MAMP_MAMP_PRO_(?P&lt;version&gt;((?:(\d+?)\.)?(?:(\d+?)\.)?(\*|\d+?)))-(?P&lt;arch&gt;Intel-x86).pkg)"</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>URLDownloader</string>
			<key>Arguments</key>
			<dict>
				<key>url</key>
				<string>%DOWNLOAD_URL%/%version%/%filename%</string>
			</dict>
		</dict>
<!--		<dict>
			<key>Processor</key>
			<string>FileMover</string>
			<key>Arguments</key>
			<dict>
				<key>source</key>
				<string>%RECIPE_CACHE_DIR%/downloads/%filename%</string>
				<key>target</key>
				<string>%RECIPE_CACHE_DIR%/downloads/MAMP_MAMP_PRO_%version%.pkg</string>
			</dict>
		</dict>
-->
		<dict>
			<key>Processor</key>
			    <string>com.github.grahampugh.recipes.commonprocessors/StringReplacer</string>
			<key>Arguments</key>
			<dict>
				<key>input_string</key>
				<string>%filename%</string>
				<key>string_to_replace</key>
				<string>-Intel-x86</string>
				<key>replacement_string</key>
				<string></string>
				<key>output_string</key>
				<string>%filename%</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>EndOfCheckPhase</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>input_path</key>
				<string>%pathname%</string>
				<key>expected_authority_names</key>
				<array>
					<string>Developer ID Installer: MAMP GmbH (5KCB5KHK77)</string>
					<string>Developer ID Certification Authority</string>
					<string>Apple Root CA</string>
				</array>
			</dict>
			<key>Processor</key>
			<string>CodeSignatureVerifier</string>
		</dict>
	</array>
</dict>
</plist>
